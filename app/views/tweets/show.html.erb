<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<div class="action">
				<% if @tweet.user == current_user %>
					<%= link_to '編集', edit_tweet_path(@tweet) %>
					<%= link_to '削除', tweet_path(@tweet), method: :delete, "data-confirm" => "本当に削除しますか？" %>
				<% end %>
			</div>
			<div>
				<%= @tweet.user.name %><br>
				<%= @tweet.content %>
			</div>
		</div>
	</div>
</div>

